<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilRadnika">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nazivradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime i prezime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/datumrodjenjaradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum rodjenja"
        app:layout_constraintTop_toTopOf="@id/nazivradnika"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/mestorodjenjaradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesto rodjenja"
        app:layout_constraintTop_toTopOf="@id/datumrodjenjaradnika"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/ocenaradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocena radne sposobnosti"
        app:layout_constraintTop_toTopOf="@id/mestorodjenjaradnika"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/radnoiskustvoradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radno iskustvo"
        app:layout_constraintTop_toTopOf="@id/ocenaradnika"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/dodatnesposobnostiradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodatne sposobnosti"
        app:layout_constraintTop_toTopOf="@id/radnoiskustvoradnika"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/cenaradnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        app:layout_constraintTop_toTopOf="@id/dodatnesposobnostiradnika"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>